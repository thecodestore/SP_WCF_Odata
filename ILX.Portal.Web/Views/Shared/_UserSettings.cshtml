@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">

	<a data-toggle="dropdown" class="dropdown-toggle" href="#"><span class="glyphicon glyphicon-user"></span> Hello @UserManager.GetUserName(User)! <b class="caret"></b><span class="glyphicon glyphicon-none"></span></a>
	<ul role="menu" class="dropdown-menu">
		<li><a href="#"><span class="glyphicon glyphicon-envelope"></span> Messages</a></li>
		<li><a href="#"><span class="glyphicon glyphicon-globe"></span> Notifications</a></li>
		<li class="divider"></li>
		<li>
			<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
				<span class="glyphicon glyphicon-cog"></span> Settings
			</a>
		</li>
		<li>


			<button type="submit" class="btn btn-link navbar-btn navbar-link">&nbsp;&nbsp;<span class="glyphicon glyphicon-off"></span> Logout</button>

		</li>

	</ul>

</form>
}
else
{
<a data-toggle="dropdown" class="dropdown-toggle" href="#"><span class="glyphicon glyphicon-user"></span> Guest <b class="caret"></b><span class="glyphicon glyphicon-none"></span></a>
<ul role="menu" class="dropdown-menu">
	<li><a asp-area="Identity" asp-page="/Account/Register"><span class="glyphicon glyphicon-book"></span> Register</a></li>
	<li><a asp-area="Identity" asp-page="/Account/Login"><span class="glyphicon glyphicon-user"></span> Login</a></li>
</ul>
}